{% extends "cameras/layout.jinja" %}

{% block content %}
    <nav id="per-night-menu" class="channel-menu" role="navigation">
    <h3>Per Night Channels</h3>
      <ul class="channels flr">
          <li class="channel"><a href="#" class="button button-large">Rolling Buffer</a></li>
          <li class="channel"><a href="#" class="button button-large">Tonight's Movie</a></li>
      </ul>
    </nav>
    <nav id="per-image-menu" class="channel-menu" role="navigation">
    <h3>Per Image Channels: Current</h3>
      <ul class="channels flr">
        {% for channel in channels %}
          <li class="channel">
            <a  class="button button-large {{channel}}"
                href="/rubintv/{{ camera.slug }}/{{channel}}_current" target="_blank">
              <span>{{ channels[channel].name }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <div class="columns">
      <section class="channel-day-data">
        <div class="channel-grid-heading">
          <h3>Most recent data: <span class="data">{{ date }}<span></h3>
          <div class="channel-grid">
              <span class="grid-title">Seq. No.</span>
              <span class="grid-title gt-channel">Monitor</span>
              <span class="grid-title gt-channel">Spectrum</span>
              <span class="grid-title gt-channel">ImAnalysis</span>
              <span class="grid-title gt-channel">Mount</span>
            </div>
        </div>
        <div class="channel-grid">
          {% include "cameras/grid-data.jinja" %}
        </div>
      </section>
      <section class="sidebar">
        <a class="button button-large" href="/rubintv/{{camera.slug}}/historical">Historical data</a>
      </section>
    </div>
{% endblock content %}
